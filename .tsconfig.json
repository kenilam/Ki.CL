{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./project",
    "checkJs": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "forceConsistentCasingInFileNames": true,
    "importHelpers": true,
    "jsx": "preserve",
    "lib": [
      "es2015",
      "dom"
    ],
    "module": "esNext",
    "moduleResolution": "node",
    "noEmitHelpers": true,
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "noUnusedLocals": true,
    "paths": {
      "@*": [
        "src/*"
      ],
      "$*": [
        "*"
      ]
    },
    "resolveJsonModule": true,
    "sourceMap": true,
    "target": "es5",
    "typeRoots": [
      "./node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules",
    "**/node_modules/*",
    "project/build"
  ],
  "include": [
    "project/src/**/*"
  ],
  "sourceMap": true
}
