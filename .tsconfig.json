{
    "compilerOptions": {
        "baseUrl": "./",
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "node",
        "jsx": "preserve",
        "sourceMap": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": false,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "noImplicitAny": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": ".tsc/",
        "importHelpers": true,
        "noEmitHelpers": true,
        "allowJs": true,
        "types": [],
        "lib": [
            "es6",
            "dom"
        ]
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "project/**/*",
        ".Webpack/**/*"
    ],
    "sourceMap": true,
    "defaultSeverity": "warning"
}