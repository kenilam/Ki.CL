{
  "inject" : {
    "index" : {
      "fileRoot" : "bower_components",
      "src" : [
        "**/dist/html5shiv.js",
        "**/dist/jquery.js",
        "**/fetch.js",
        "**/modernizr.js",

        "**/*/font-awesome.css",
        "**/font-awesome/fonts/*",
        "**/*/reset.css",
        "**/*/normalize.css",
        "**/*/normalize-opentype.css"
      ]
    }
  },

  "jshint" : {
    "predef" : [
      "$",
      "ElementQueries",
      "ResizeSensor",
      "template",
      "classNames"
    ]
  },

  "sass" : {
    "includePaths": [
      "./bower_components/",
      "./project/src",
      "./project/src/Asset",
      "./project/src/Lib/App"
    ],
    "outputStyle": "compressed",
    "sourceMap": true,
    "compressed": true,
    "errLogToConsole": true,
    "precision": 2
  }
}
